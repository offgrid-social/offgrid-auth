# Server
PORT=4000
LOG_LEVEL=info
REQUEST_BODY_LIMIT=1mb

# Database
DATABASE_URL=postgresql://offgrid:offgrid@localhost:5432/offgrid_auth
TEST_DATABASE_URL=postgresql://offgrid:offgrid@localhost:5432/offgrid_auth_test

# Auth / JWT
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

JWT_ISSUER=offgrid
JWT_AUDIENCE=offgrid-clients

# RSA keys (replace in production)
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Security
BCRYPT_SALT_ROUNDS=12

# CORS / Rate limit
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1m

# Optional admin seed
ADMIN_EMAIL=
ADMIN_USERNAME=
ADMIN_PASSWORD=

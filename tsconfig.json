{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
  },
  "include": ["src", "test", "prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
